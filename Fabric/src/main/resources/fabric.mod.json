{
  "schemaVersion": 1,
  "id": "portalhexaddon",
  "version": "${version}",
  "name": "Portal Hex Addon",
  "description": "Portal Hex Addon addon for Hex Casting",
  "authors": [
    "Stickia",
    "Thank you too Sam for the Portal Staff",
    "Thank you too ChuijkYahus for the zh_cn translation"
  ],
  "contact": {
    "homepage": "https://stickia.github.io/PortalHexAddon",
    "sources": "https://github.com/stickia/PortalHexAddon"
  },
  "license": "MIT",
  "icon": "icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.portalhexaddon.fabric.PortalHexAddonFabric"
    ],
    "client": [
      "net.portalhexaddon.fabric.PortalHexAddonClientFabric"
    ]
  },
  "mixins": [
    "portalhexaddon-common.mixins.json",
    "portalhexaddon.mixins.json"
